{
  "manifest_version": 3,
  "name": "PrismaX AI Queue Monitor",
  "version": "1.0.0",
  "description": "Monitor PrismaX AI queue and send notifications when it's your turn to teleoperate the robotic arm",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://prismax.ai/*",
    "*://*.prismax.ai/*",
    "http://localhost:3001/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://prismax.ai/*",
        "*://*.prismax.ai/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "PrismaX AI Queue Monitor"
  }
}